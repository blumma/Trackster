<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/txt_track_perf_title"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:text="Leistungsdaten eintragen"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="parent" />

    <EditText
        android:id="@+id/txt_vorname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Vorname"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txt_track_perf_title"/>

    <EditText
        android:id="@+id/txt_nachname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nachname"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_vorname" />

    <EditText
        android:id="@+id/txt_klasse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Klasse"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_nachname" />

    <EditText
        android:id="@+id/txt_geschlecht"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress|textPersonName"
        android:text="Geschlecht"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_klasse"/>

    <EditText
        android:id="@+id/date_gebdatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:text="Geburtsdatum"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_klasse"
        app:layout_constraintStart_toEndOf="@+id/txt_geschlecht" />

    <EditText
        android:id="@+id/txt_60m"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/date_gebdatum" />

    <EditText
        android:id="@+id/txt_1000m"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_60m" />

    <EditText
        android:id="@+id/txt_longjump"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_1000m" />

    <TextView
        android:id="@+id/lbl_60m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60m"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/date_gebdatum"
        app:layout_constraintStart_toEndOf="@id/txt_60m"/>

    <TextView
        android:id="@+id/lbl_1000m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000m"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/txt_60m"
        app:layout_constraintStart_toEndOf="@id/txt_1000m" />

    <TextView
        android:id="@+id/lbl_longjump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weitsprung"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/txt_1000m"
        app:layout_constraintStart_toEndOf="@id/txt_longjump"/>


    <Button
        android:id="@+id/btn_save_performance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speichern"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"/>

</android.support.constraint.ConstraintLayout>